<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<TextView
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_margin="@dimen/margin_small"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxWidth="300dp"
			android:textColor="@color/colorWhite"
			android:background="@drawable/bg_message_me"
			android:id="@+id/tvMessage"
			tools:text="Hi I'm Bob, I'm live in Ho Chi Minh City, I want to talking about the interview on the next week at Zalora firm."/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="12:20"
			app:layout_constraintRight_toRightOf="@id/tvMessage"
			app:layout_constraintTop_toBottomOf="@id/tvMessage"/>

</android.support.constraint.ConstraintLayout>